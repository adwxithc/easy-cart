


<form class="forms-sample"  method="POST" id="addOfferForm">
    <div class="grid-margin stretch-card">
        <div class="card">
        <div class="card-body px-5">
            <div class="d-flex justify-content-center">
                <h3 class="card-title">Add Offer</h3>
            </div>
            

            
            <div class="form-group mt-2 setWidth" >
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Offer Name" name="name">
                <div id="offerNameError" class="error"></div>
            </div>

        
            <div class="form-group mt-4 setWidth">
                <label for="discountPercentage">Discount</label>
                <input type="number" class="form-control" id="discountPercentage" placeholder="Discount" name="discountPercentage">
                <div id="discountPercentageError" class="error"></div>

            </div>
            <div class="form-group mt-4 setWidth">
                <label for="startDate">Start Date</label>
                <input type="date" class="form-control" id="startDate" placeholder="Start Date" name="startDate">
                <div id="startDateError" class="error"></div>

            </div>
            <div class="form-group mt-4 setWidth">
                <label for="expireDate">Expire Date</label>
                <input type="date" class="form-control" id="expireDate" placeholder="Expire Date" name="expireDate">
                <div id="expireDateError" class="error"></div>

            </div>

            <div class="d-flex justify-content-center p-3 mt-3">
                <input type="button" class="btn btn-primary mr-2 offerAction" value="Save" id="addOffer">
                <a type="button" name="" id="" href="/admin/adminDashboard" >cancel</a>
            </div>


        </div>
        </div>
    </div>
            
            
            

</form>





