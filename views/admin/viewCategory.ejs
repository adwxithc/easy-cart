 
            <div class=" grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Categories</h4>
                    <p class="card-description" id="alertMessage">
                   
                    </p>
                    <div class="table-responsive">
                        <input type="hidden" value="<%=locals.currentPage%>" id="cur">
                        <input type="hidden" value="<%=locals.totalpages%>" id="totp">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Category Name</th>
                            <th>status</th>
                            <th>Actions</th>

                          </tr>
                        </thead>

                        <tbody>
                            
                          
                            <%
                            if(locals.categories){
                                
                                for(let i=0; i < categories.length; i++){
                                %>
                        <tr id="<%=categories[i]._id%>">
                            <td>
                              
                              <h6 class="card-title"><%=categories[i].name %></h6>
                              
                              <span class=" description-limit"><%=categories[i].description%></span>
                            </td>

                            <td>
                              <%if(categories[i].status){%> 
                                <span class="text-success" >listed</span>
                              <%}else{%>
                                  <span class="text-danger" >unlisted</span>
                              <%}%>
                            </td>

                            <td>

                              <div class="input-group">
                                <div class="input-group-prepend">
                                
                                  <button class="btn btn-sm btn-dark dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                  <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Edit</a>
                                    <a class="dropdown-item status" href="#"  categoryId="<%=categories[i]._id%>">
                                    <%if(categories[i].status){%> 
                                      unlist
                                    <%}else{%>
                                      list
                                    <%}%>
                                    </a>
                                </div>
                              </div>

                            </td>
                        </tr>
                            <%
                            }
                        }else{
                        %>
                          <tr>No categories exist.....</tr>
                        <%}%>
                        </tbody>
                      </table>


                      <nav aria-label="Page navigation example" id="pagination">
                        <ul class="pagination">
                          <li class="page-item" id="prev">
                            <a class="page-link" href="#" aria-label="Previous">
                              <span aria-hidden="true" >&laquo;</span>
                              <span class="sr-only" >Previous</span>
                            </a>
                          </li>
                          <!-- <li class="page-item"><a class="page-link" href="#">1</a></li> -->
                          <li class="page-item" ><a class="page-link" href="#" id="current">1</a></li>
                          
                          <!-- <li class="page-item"><a class="page-link" href="#">3</a></li> -->
                          <li class="page-item" id="next">
                            <a class="page-link" href="#" aria-label="Next">
                              <span aria-hidden="true" >&raquo;</span>
                              <span class="sr-only">Next</span>
                            </a>
                          </li>
                        </ul>
                      </nav>

                    </div>
                  </div>
                </div>
            </div>


          


              