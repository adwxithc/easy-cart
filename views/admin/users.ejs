<div class=" grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Users</h4>
        <!-- <p class="card-description"> Add class <code>.table-hover</code> -->
        <!-- </p> -->
        <input type="hidden" value="<%=locals.currentPage%>" id="cur">
        <input type="hidden" value="<%=locals.totalpages%>" id="totp">

        <div class="table-responsive">


            <p class="card-description" id="alertMessage"></p>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Full Name</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Joined On</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              
                <%
                if(locals.users){
                    for(let i=0; i< users.length; i++){
                    %>
                <tr>
                <td><%=users[i].fname  +" "+users[i].lname %></td>
                <td><%= users[i].mobile %></td>
                <td><%=users[i].email %></td>
                <td><%= users[i].joinDate %></td>
                <td><button type="button" class="btn <%= users[i].status ? 'btn-outline-danger' : 'btn-outline-success' %> btn-fw status" userId="<%= users[i]._id %>" onclick="return confirm('Are You sure..?')">

                    <%
                    if(users[i].status){
                        %>
                    Block 
                    <%
                    }else{
                    %>
                        Unblock
                        <%}%>
                </button></td>
                </tr>
                <%
                    }
                }else{
                %>
                <tr>No users are available....</tr>
                <%}%>
              
            </tbody>
          </table>



          <nav aria-label="Page navigation example" id="pagination">
            <ul class="pagination">
              <li class="page-item" id="prev">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true" >&laquo;</span>
                  <span class="sr-only" >Previous</span>
                </a>
              </li>
              <!-- <li class="page-item"><a class="page-link" href="#">1</a></li> -->
              <li class="page-item" ><a class="page-link" href="#" id="current">1</a></li>
              
              <!-- <li class="page-item"><a class="page-link" href="#">3</a></li> -->
              <li class="page-item" id="next">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true" >&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>

        </div>
      </div>
    </div>
  </div>