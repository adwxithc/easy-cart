


<form class="forms-sample"  method="POST" id="addCouponeForm">
    <div class="grid-margin stretch-card">
        <div class="card">
        <div class="card-body px-5">
            <div class="d-flex justify-content-center">
                <h3 class="card-title">Add Coupone</h3>
            </div>
            

            
            <div class="form-group mt-2 setWidth" >
                <label for="CouponeCode">Code</label>
                <input type="text" class="form-control" id="CouponeCode" placeholder="Coupone Code" name="couponeCode">
                <div id="CouponeCodeError" class="error"></div>
            </div>
            <div class="form-group mt-4 setWidth">
                <label for="minPurchaseAmount">Minimum Purchase Amount</label>
                <input type="number" class="form-control" id="minPurchaseAmount" placeholder="Minimum Purchase Amount" name="minPurchaseAmount">
                <div id="minPurchaseAmountError" class="error"></div>

            </div>
            <div class="form-group mt-4 setWidth">
                <label for="maxPurchaseAmount">Maximum Purchase Amount</label>
                <input type="number" class="form-control" id="maxPurchaseAmount" placeholder="Maximum Purchase Amount" name="maxPurchaseAmount">
                <div id="maxPurchaseAmountError" class="error"></div>

            </div>
            <div class="form-group mt-4 setWidth">
                <label for="quantity">quantity</label>
                <input type="number" class="form-control" id="quantity" placeholder="Quantity" name="quantity">
                <div id="quantityError" class="error"></div>

            </div>
            <div class="form-group mt-4 setWidth">
                <label for="couponeDiscount">Discount</label>
                <input type="number" class="form-control" id="couponeDiscount" placeholder="Discount" name="couponeDiscount">
                <div id="couponeDiscountError" class="error"></div>

            </div>
            <div class="form-group mt-4 setWidth">
                <label for="startDate">Start Date</label>
                <input type="date" class="form-control" id="startDate" placeholder="Start Date" name="startDate">
                <div id="startDateError" class="error"></div>

            </div>
            <div class="form-group mt-4 setWidth">
                <label for="expireDate">Expire Date</label>
                <input type="date" class="form-control" id="expireDate" placeholder="Expire Date" name="expireDate">
                <div id="expireDateError" class="error"></div>

            </div>

            <div class="d-flex justify-content-center p-3">
                <input type="button" class="btn btn-primary mr-2 couponeAction" value="Save" id="addCoupone">
                <a type="button" name="" id="" href="/admin/adminDashboard" >cancel</a>
            </div>


        </div>
        </div>
    </div>
            
            
            

</form>





