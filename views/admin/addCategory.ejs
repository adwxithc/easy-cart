


 <form class="forms-sample"  method="POST" id="addCategoryForm" >
    <div class="grid-margin stretch-card">
        <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Category</h4>
            <p class="card-description" id="adCategoryalert"></p>

            
            <div class="form-group mt-4">
                <label for="categoryName">Category Name</label>
                <input type="text" class="form-control" id="ctegoryName" placeholder="Category Name" name="categoryName">
            </div>

            <div class="form-group mt-4">
                <label for="categoryDescription">Description</label>
                <textarea class="form-control" id="categoryDescription" rows="4" placeholder="Category Description" name="categoryDescription"></textarea>
            </div>


        </div>
        </div>
    </div>


    <div class="grid-margin stretch-card">
        <div class="card">
        <div class="card-body">
            <h4 class="card-title">Meta Options</h4>
            
            <!-- <form class="forms-sample"> -->
            <div class="form-group mt-5">
                <label for="metaTitle">Meta Tag Title</label>
                <input type="text" class="form-control" id="metaTitle" placeholder="Meta Tag Title" name="metaTitle">
                <p class="card-description"> Set a meta tag title. Recommended to be simple and precise and keywords. </p>
            </div>
            

            <div class="form-group mt-5">
                <label for="metaDescription">Meta Tag Description</label>
                <textarea class="form-control" id="metaDescription" rows="4" placeholder="Meta Tag Desctiption" name="metaDescription"></textarea>
                <p class="card-description"> Set a meta tag description to the category for increased SEO ranking</p>
            </div>

            <!-- <form class="forms-sample"> -->
                <div class="form-group mt-5">
                    <label for="keywords">Meta Tag Keywords</label>
                    <input type="text" class="form-control" id="keywords" placeholder="Meta Tag Keywords" name="keywords">
                    <p class="card-description"> Set a list of keywords that the category is related to. Seperate the key words by adding a comma<code>(,)</code> between each keyword </p>
                </div>

            <input type="submit" class="btn btn-primary mr-2" value="Submit">
            
            
            

        </div>
        </div>
    </div>
</form>





