 
            <div class=" grid-margin stretch-card px-5 p-4" id="categ">
                <div class="card">
                  <div class="card-body">
                    <% if(locals.key){%>
                      <h4 class="card-title">Search result for <%=key%></h4>
                      <%}else{%>
                    <h3 class="card-title">Offers</h3>
                    <%}%>

           


                    <div class="table-responsive">
                    <%if(locals.offers && offers.length > 0 ){%>
                        <input type="hidden" name="" id="cur" value="<%=currentPage%>">
                        <input type="hidden" name="" id="totp" value="<%= totalpages%>">
                      <table class="table table-hover table-borderless" id="">
                        <thead class="border-bottom ">
                          <tr>
                           
                            <th>Name</th>
                            <th>Discount</th>
                            <th>Start Date</th>
                            <th>Expire Date</th>
                            <th>Status</th>
                            <th>Action</th>

                          </tr>
                        </thead>
                        <tbody>
                            <%for(let offer of offers){%>
                                <tr>
                                    <td><%= offer.name%></td>
                                    <td><%= offer.discountPercentage%></td>
                                    <td><%= offer.startDate.toDateString() %></td>
                                    <td><%= offer.expireDate.toDateString() %></td>
                                    <td>
                                      <%if(new Date(offer.expireDate)<=new Date()){%>
                                        <span class="text-danger" >expired</span>
                                      <%}else if(offer.status){%>
                                         <span class="text-success" id="status<%=offer._id%>">listed</span>
                                      <%}else{%>
                                        <span class="text-danger" id="status<%=offer._id%>">unlisted</span>
                                      <%}%>
                                    </td>


                                    <td>

                                        <div class="input-group">
                                          <div class="input-group-prepend">
                                          
                                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                            <div class="dropdown-menu">
                                              <a class="dropdown-item offerAction edit" href="#" offerId="<%=offer._id%>">Edit</a>
                                              <%if(!( offer.expireDate<=new Date() )){%>
                                              <a class="dropdown-item offerAction status" href="#"  offerId="<%=offer._id%>" id="change<%=offer._id%>">
                                                <%if(offer.status){%>
                                                    unlist
                                                <%}else{%>
                                                    list
                                                <%}%>
                                              </a>
                                              <%}%>
                                          </div>
                                        </div>
          
                                      </td>


                                </tr>
                          
                            <%}%>
                        </tbody>
                      </table>
                      <%}else{%>
                        <div class="noData">
                          No offer created..!

                        </div>

                        <%}%>
                      <div id="myModal" class="modal">
                        <div class="modal-content " >
                          <span class="close" id="closeBtn"><i class="mdi mdi-window-close"></i></span>
                          <p>Are you sure you want to list/unlist this Brand ?</p>
                          <button id="confirmBtn">Confirm</button>
                         
                        </div>
                      </div>



                      <div class="d-flex justify-content-center p-3">
                        <%if(locals.pagination){%>
                          <nav aria-label="Page navigation example" >
                            <ul class="pagination ">
                              <li class="page-item " >
                                <a class="page-link offerAction" href="#" aria-label="Previous" id="prevOffers">
                                  <span aria-hidden="true" >&laquo;</span>
                                  <span class="sr-only" >Previous</span>
                                </a>
                              </li>
                              <!-- <li class="page-item"><a class="page-link" href="#">1</a></li> -->
                              <li class="page-item" ><a class="page-link" href="#" id="currentOffers">1</a></li>
                              
                              <!-- <li class="page-item"><a class="page-link" href="#">3</a></li> -->
                              <li class="page-item " >
                                <a class="page-link offerAction" href="#" aria-label="Next" id="nextOffers">
                                  <span aria-hidden="true" >&raquo;</span>
                                  <span class="sr-only">Next</span>
                                </a>
                              </li>
                            </ul>
                          </nav>
                          <%}%>
                      </div>


                    </div>
                  </div>
                </div>
            </div>


          


              