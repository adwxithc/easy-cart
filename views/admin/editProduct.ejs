
 

<div class="">
       
    <form class="forms-sample " id="addProductForm" >
        <h3 class="card-title">Add Product</h3>
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">General</h4>
                    <p class="card-description" id="alertMessage"></p>
                   


                  <div class="d-flex justify-content-between">

                    <div class="form-group w-50 mx-3">
                        <label for="name">Product Name</label>
                        <input type="text" class="form-control"  placeholder="Product Name" id="name">
                    </div>


                    <%if(locals.categories){%>
                    <div class="multiselect pt-4 w-50 mx-3">
                        <div class="select-box d-flex justify-content-between " id="categorySelect" >
                            
                            <div class="selected-options" id="categorylist">Select Category</div>
                            <div class="arrow">&#9660;</div>
                        </div>
                        <div class="options-container " id="options-container">
                          <%for(let i=0;i< categories.length ;i++){%>
                            <div class="option">
                                <label class="checkbox-label"><input type="checkbox" class="option-input" value="<%= categories[i].name%>" catgoryId="<%=categories[i]._id%>"> <%= categories[i].name%></label>
                            </div>
                          <%}%>

                        </div>
                    </div>
                    <%}%>

                  </div>




                      <div class="form-group mx-3">
                        <label for="description">Description</label>
                        <textarea class="form-control"  placeholder="Description" rows="4" id="description"></textarea>
                      </div>


                
                     


         

                      <div class="d-flex justify-content-between">

    
                        <div class="form-group w-50 mx-3">
                            <label for="name">Brand</label>
                            <input type="text" class="form-control"  placeholder="Brand" id="brand">
                          </div>

                          <div class="form-group w-50 mx-3">
                            <label for="name">Stock</label>
                            <input type="text" class="form-control"  placeholder="Stock" id="stock">
                          </div>



                      </div>

                      
                      <div class="d-flex justify-content-between">

    
                        <div class="form-group  w-50 mx-3">
                            <label for="name">Price</label>
                            <input type="text" class="form-control"  placeholder="Price" id="price">
                          </div>

                          <div class="form-group  w-50 mx-3">
                            <label for="name">Size</label>
                            <input type="text" class="form-control"  placeholder="Size" id="size">
                          </div>



                      </div>

                      <div class="form-group py-4 mx-3">
                        <label for="description">Color</label>
                        <input type="color" class="form-control form-control-color"  value="#EE1111" title="Choose product color" id="color">
                    </div>

                <div class="form-group py-4 mx-3 ">
                  <label for="description" >Upload Images</label>
                  <div class="upload-container">
                      <label for="image-upload" class="custom-button"><i class="mdi mdi-upload icon-lg"></i></label>

                      <input type="file" id="image-upload" class="upload-input" accept="image/*"  multiple>
                      <div id="image-preview" class="image-preview"></div>
                  </div>
                </div>


                    
                  </div>
                </div>
            </div>

        <h4 class="card-title">Additional</h4>


            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    

            <div class="d-flex justify-content-between">
                    
                    <div class="form-group w-50 mx-3">
                        <label for="name">Care Instructions</label>
                        <input type="text" class="form-control"  placeholder="Care Instructions" id="careInstructions">
                      </div>


                      <div class="form-group w-50 mx-3">
                        <label for="name">Material</label>
                        <input type="text" class="form-control"  placeholder="Material" id="material">
                      </div>

            </div>

                </div>
            </div>
        </div>

 <div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

        <div class="form-group mx-3">
            <label for="description">Additional Specifications</label>
            <textarea class="form-control" placeholder="Additional Specifications"  rows="4" id="additionalSpecifications"></textarea>
          </div>

          </div>
        </div>
    </div>

            <button type="button" class="btn btn-primary ml-3 " id="addProduct" >Submit</button>


    </form>
</div>



    


