<%- include("../../partials/login-register/header.ejs") %>

<div class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                        <!-- <img src="img/logo.jpg" alt="logo"> -->
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <%if(locals.message){%>
								<div class="text-center alert-danger" id="alertMessage"> 
								<%=message%>
								</div>
								<%}%>
                            <h4 class="card-title">Reset Password</h4>
                            <form method="POST" action="/resetPassword" novalidate onsubmit="return validateForm()">

    
                                <div class="form-group">
                                    <label for="password">Password
                                    </label>
                                    <input id="password" type="password" class="form-control" name="password" required onclick="clearError('passwordError')">
                                    <div id="passwordError" class="text-danger"></div>

                                </div>

                                <div class="form-group">
                                    <label for="password">Re-enter Password
                                    </label>
                                    <input id="rePassword" type="password" class="form-control" name="rePassword" required onclick="clearError('rePasswordError')">
                                    <div id="rePasswordError" class="text-danger"></div>

                                </div>
                                <input type="hidden" name="email" id="" value="<%=email%>">
                                <input type="hidden" name="token" value="<%=token%>">


    
    
                                <div class="form-group m-0">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        SAVE
                                    </button>
                                </div>
                       
                            </form>
                        </div>
                    </div>
                    <div class="footer">
                        Copyright &copy; 2023 &mdash; easy cart 
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="/static/user/userJs/login-register/resetPassword.js"></script>

<%- include("../../partials/login-register/footer.ejs") %>
