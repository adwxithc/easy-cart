  <div>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Sales Report</h4>

        <div class="d-flex justify-content-end">

          <div class="d-flex justify-content-end pb-2">
            <label for="salesPaymentStatus" class="ml-3 mr-1">Order Status</label>
            <select class="btn btn-secondary reportAction" id="salesOrderStatus">
              <option value="all" >All</option>
              <option value="Pending">Pending</option>
              <option value="Processing">Processing</option>
              <option value="Shipped">Shipped</option>
              <option value="Delivered">Delivered</option>
              <option value="Canceled">Canceled</option>


  
            </select>
          </div>


          <div class="d-flex justify-content-end pb-2">
            <label for="salesPaymentStatus" class="ml-3 mr-1">Payment Status</label>
            <select class="btn btn-secondary reportAction" id="salesPaymentStatus">
              <option value="all" >All</option>
              <option value="pending">pending</option>
              <option value="received">received</option>
              <option value="refunded">refunded</option>
  
            </select>
          </div>
  
          
          <div class="d-flex justify-content-end pb-2">
            <label for="salesTimePeriod" class="ml-3 mr-1">Time period</label>
            <select class="btn btn-secondary reportAction" id="salesTimePeriod">
              <option value="all" >All</option>
              <option value="year">This year</option>
              <option value="month">This month</option>
              <option value="week">This week</option>
  
            </select>
          </div>
        </div>
       
        <div class="table-responsive">


          <table class="table table-bordered">
            <thead>
              <tr>
                <th>#</th>
                <th> Order Id</th>
                <th>ordered date</th>
                <th>delivered date</th>
                <th> Customer </th>
                <th> Customer id </th>
                <th>product</th>
                <th>product id</th>
                <th>sales status</th>
                <th> payment Method </th>
                <th> payment status </th>
                <th>order status</th>
                <th>price</th>
                <th>quantity</th>
                <th>total price</th>
              </tr>
            </thead>
            <tbody id="salesTableBody">

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>